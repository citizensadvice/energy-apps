- if current_step.appliance.variants?
  = form.cads_collection_radio_buttons :wattage, label: current_step.appliance.variant_question, collection: current_step.appliance.variant_options, text_method: :text, value_method: :value

%div{ class: current_step.cycle_frequency_field_classes }
  - if current_step.cycle_frequency_error.present?
    .cads-form-field__error-marker
  .cads-form-field__content
    %fieldset.cads-form-group
      %legend.cads-form-field__label
        How many cycles do you run?
      - if current_step.cycle_frequency_error.present?
        %p.cads-form-field__error-message
          = current_step.cycle_frequency_error
      .frequency-inputs
        .frequency-inputs__item
          = form.cads_text_field :cycles, label: "Cycles", width: :two_chars, required: true, options: { additional_attributes: { "inputmode": "numeric",  id: "daily_usage_creation_steps_time_usage_base-input" } }
        .frequency-inputs__item
          = form.cads_collection_select :frequency, label: "Frequency", required: true, collection: current_step.frequency_options, text_method: :text, value_method: :value